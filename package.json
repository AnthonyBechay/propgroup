{
  "name": "propgroup",
  "version": "1.0.0",
  "description": "PropGroup - A comprehensive real estate investment platform",
  "private": true,
  "scripts": {
    "dev": "node scripts/start.js",
    "dev:backend": "node scripts/start-backend.js",
    "dev:frontend": "node scripts/start-frontend.js",
    "dev:web": "pnpm --filter web dev",
    "build": "node scripts/build.js",
    "start": "pnpm --filter web start",
    "start:backend": "pnpm --filter backend start",
    "setup": "node scripts/setup.js",
    "clean": "node scripts/clean.js",
    "build:packages": "node scripts/build-packages.js",
    "lint": "pnpm --filter web lint",
    "lint:fix": "pnpm --filter web lint:fix",
    "type-check": "pnpm run type-check:all",
    "type-check:all": "pnpm --filter web type-check",
    "test": "pnpm --filter web test:run",
    "test:watch": "pnpm --filter web test",
    "test:coverage": "pnpm --filter web test:coverage",
    "build:web": "pnpm run build:packages && pnpm --filter web build",
    "build:backend": "pnpm --filter backend build",
    "build:mobile": "pnpm run build:packages && pnpm --filter mobile-capacitor build",
    "vercel-build": "node scripts/vercel-build-monorepo.js",
    "deploy": "pnpm run build",
    "deploy:web": "vercel --prod",
    "deploy:preview": "vercel",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,sql}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,sql}\"",
    "db:seed": "node packages/db/seed.js",
    "db:migrate": "node packages/db/migrate.js",
    "db:check": "node packages/db/check-database.js",
    "mobile:ios": "pnpm --filter mobile-capacitor cap:ios",
    "mobile:android": "pnpm --filter mobile-capacitor cap:android",
    "mobile:sync": "pnpm --filter mobile-capacitor cap:sync"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}

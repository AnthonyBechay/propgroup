# ====================================
# VERCEL DEPLOYMENT CONFIGURATION
# ====================================
# Copy this file to .env.local for local development
# Add these variables to Vercel Dashboard for production

# ====================================
# REQUIRED ENVIRONMENT VARIABLES
# ====================================

# Node Environment (set automatically by Vercel)
# NODE_ENV=production

# Supabase Configuration (REQUIRED)
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_PROJECT_ID=your_project_reference

# Application URLs (auto-set by Vercel for production)
# For local development use:
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ====================================
# OPTIONAL SERVICES
# ====================================

# Email Service (Choose one)
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Option 2: Resend (recommended)
RESEND_API_KEY=your_resend_api_key

# Authentication Providers (optional)
SUPABASE_AUTH_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_AUTH_GOOGLE_SECRET=your_google_secret
SUPABASE_AUTH_GITHUB_CLIENT_ID=your_github_client_id
SUPABASE_AUTH_GITHUB_SECRET=your_github_secret

# Storage Configuration
NEXT_PUBLIC_STORAGE_URL=https://[PROJECT_REF].supabase.co/storage/v1

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Maps (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Processing (optional)
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXX

# AI Services (optional)
OPENAI_API_KEY=sk-XXXXXXXXXXXX

# ====================================
# DATABASE CONFIGURATION
# ====================================

# If using Prisma with external database (optional)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=

# If using Prisma with Supabase (optional)
# Use connection pooling for serverless
DATABASE_URL=postgres://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgres://postgres.[PROJECT_REF]:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# ====================================
# VERCEL AUTO-SET VARIABLES
# ====================================
# These are automatically set by Vercel, DO NOT add manually:
# - VERCEL=1
# - VERCEL_ENV=production|preview|development
# - VERCEL_URL=your-deployment-url.vercel.app
# - VERCEL_GIT_COMMIT_SHA
# - VERCEL_GIT_COMMIT_MESSAGE
# - VERCEL_GIT_COMMIT_AUTHOR_NAME

# ====================================
# NOTES FOR DEPLOYMENT
# ====================================
# 1. Add all required variables to Vercel Dashboard
# 2. Use different values for preview vs production
# 3. Never commit actual keys to git
# 4. Rotate keys regularly for security
# 5. Use Vercel CLI to manage secrets: vercel env add
